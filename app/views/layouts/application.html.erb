<!DOCTYPE html>
<html id="S&P">
  <head>
    <title>Simplified Payroll Solution</title>
    <%= stylesheet_link_tag    "styles", :media => "all" %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>  
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="mainBox">

     <%= render "layouts/leftsidebar" %>

      <div id="MidCol">
         <%= render "layouts/topbox" %>
        <div id="rowConsCont">
          <div id="rowConsFour">
            <div id="Button"><a id="payroll" href="/payroll"></a></div>
            <div id="Button"><a id="moneyOut"></a></div>
            <div id="Button"><a id="reports"></a></div>
            <div id="Button"><a id="taxes"></a></div>
          </div>
        </div>

        <div id="DisplayArea">
          <% if flash.any?%>
        <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
        <%end %>
          <div id="Disp">
            <%= yield %>
            <%= debug(params) %>
            <%= debug(session.to_hash) %>
          </div>
        </div>
        <div id="TriCol">
          <div id="BriefCont">
            <div id="Brief">
              <div id="BriefHead">
                <div id="NotBriefIco"></div>
                <div id="BriefDesc"><h1>NOTIFICATIONS</h1></div>
                <div id="SettingBut"></div>
              </div>
            </div>
            <div id="Brief">
              <div id="BriefHead">
                <div id="RemBriefIco"></div>
                <div id="BriefDesc"><h1>REMINDERS</h1></div>
                <div id="SettingBut"></div>
              </div>
            </div>
            <div id="Brief">
              <div id="BriefHead">
                <div id="NewBriefIco"></div>
                <div id="BriefDesc"><h1>NEWS</h1></div>
                <div id="SettingBut"></div>
              </div>
            </div>
          </div>
        </div>

      </div>

     <%= render "layouts/rightsidebar" %>  
    </div>

   


  </div>

</body>
</html>
